{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "singularName": "ticket",
    "pluralName": "tickets",
    "displayName": "Ticket"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "topic": {
      "type": "text",
      "required": true
    },
    "problemStatement": {
      "type": "text",
      "required": true
    },
    "budgetRange": {
      "type": "string",
      "required": true
    },
    "urgency": {
      "type": "string",
      "required": true
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "verifiedStatus": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "paymentStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid"
      ]
    },
    "ticketCreatedBy": {
      "type": "string",
      "required": true
    },
    "assignedSME": {
      "type": "string",
      "default": "Not Assigned"
    }
  }
}

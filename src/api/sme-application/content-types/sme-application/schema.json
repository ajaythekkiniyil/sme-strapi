{
  "kind": "collectionType",
  "collectionName": "sme_applications",
  "info": {
    "singularName": "sme-application",
    "pluralName": "sme-applications",
    "displayName": "SME Applications"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "jobName": {
      "type": "string"
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "businessEmail": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "businessNumber": {
      "type": "biginteger",
      "required": true,
      "unique": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "coverLetter": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "school": {
      "type": "string",
      "required": true
    },
    "degree": {
      "type": "string",
      "required": true
    },
    "discipline": {
      "type": "string",
      "required": true
    },
    "endDate": {
      "type": "string",
      "required": true
    },
    "legalFirstName": {
      "type": "string",
      "required": true
    },
    "legalLastName": {
      "type": "string",
      "required": true
    },
    "preferredFirstName": {
      "type": "string",
      "required": true
    },
    "linkedinProfile": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "whereDidYouFindOutAboutThisRole": {
      "type": "string",
      "required": true
    },
    "previousEmployee": {
      "type": "string",
      "required": true
    },
    "nonDisclosureAgreement": {
      "type": "string",
      "required": true
    },
    "relationStatus": {
      "type": "string",
      "required": true
    },
    "relationName": {
      "type": "string"
    },
    "smeStatus": {
      "type": "enumeration",
      "required": false,
      "default": "pending",
      "enum": [
        "pending",
        "rejected",
        "active"
      ]
    },
    "emailVerified": {
      "type": "boolean",
      "default": false
    }
  }
}

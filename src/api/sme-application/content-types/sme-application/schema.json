{
  "kind": "collectionType",
  "collectionName": "sme_applications",
  "info": {
    "singularName": "sme-application",
    "pluralName": "sme-applications",
    "displayName": "SME Applications"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "full_name": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": false
    },
    "phone": {
      "type": "biginteger"
    },
    "linkedin_url": {
      "type": "string"
    },
    "experience": {
      "type": "string"
    },
    "past_companies": {
      "type": "string"
    },
    "expertise_areas": {
      "type": "string"
    },
    "language_spoken": {
      "type": "string"
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "sme_status": {
      "type": "enumeration",
      "required": false,
      "default": "pending",
      "enum": [
        "pending",
        "rejected",
        "active"
      ]
    },
    "email_verified": {
      "type": "boolean",
      "default": false
    }
  }
}
